---
import Layout from '../../layouts/Layout.astro';
import { getCaseStudyBySlug, getAllSlugs } from '../../data/caseStudies';

export function getStaticPaths() {
  return getAllSlugs().map((slug) => ({ params: { slug } }));
}

const { slug } = Astro.params;
const caseStudy = getCaseStudyBySlug(slug!);

if (!caseStudy) {
  return Astro.redirect('/404');
}
---
<Layout title={`${caseStudy.title} — Bruno Donadío`} description={caseStudy.subtitle}>
  <article>
    <p class="mb-8">
      <a
        href="/case-studies"
        class="text-sm font-medium text-neutral-600 underline decoration-neutral-400 underline-offset-4 transition hover:decoration-neutral-600 dark:text-neutral-400 dark:decoration-neutral-600 dark:hover:decoration-neutral-400"
      >
        ← Back to Case Studies
      </a>
    </p>

    <header class="mb-12">
      <div class="mb-4 flex flex-wrap items-center gap-2">
        <span class="text-sm text-neutral-500 dark:text-neutral-400">{caseStudy.timeframe}</span>
        <span class="text-neutral-400 dark:text-neutral-600">·</span>
        <span class="text-sm text-neutral-600 dark:text-neutral-400">{caseStudy.role}</span>
      </div>
      <h1 class="text-3xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-4xl">
        {caseStudy.title}
      </h1>
      <p class="mt-2 text-lg text-neutral-600 dark:text-neutral-400">{caseStudy.subtitle}</p>
      <div class="mt-4 flex flex-wrap gap-2">
        {caseStudy.stack.map((tech) => (
          <span
            class="rounded-full bg-neutral-100 px-3 py-1 text-sm text-neutral-600 dark:bg-neutral-800 dark:text-neutral-400"
          >
            {tech}
          </span>
        ))}
      </div>
    </header>

    <div class="prose prose-neutral dark:prose-invert max-w-none">
      {caseStudy.sections.map((section) => (
        <section class="mb-10">
          <h2 class="text-xl font-semibold text-neutral-900 dark:text-neutral-100">{section.heading}</h2>
          <p class="mt-3 text-neutral-600 dark:text-neutral-400">{section.content}</p>
        </section>
      ))}
    </div>

    {caseStudy.highlights.length > 0 && (
      <section class="mt-12 border-t border-neutral-200 pt-10 dark:border-neutral-800">
        <h2 class="text-lg font-semibold text-neutral-900 dark:text-neutral-100">Highlights</h2>
        <ul class="mt-4 list-disc space-y-2 pl-5 text-neutral-600 dark:text-neutral-400">
          {caseStudy.highlights.map((h) => (
            <li>{h}</li>
          ))}
        </ul>
      </section>
    )}
  </article>
</Layout>
