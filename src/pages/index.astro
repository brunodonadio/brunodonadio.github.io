---
import Layout from '../layouts/Layout.astro';
import CaseStudyCard from '../components/CaseStudyCard.astro';
import { caseStudies } from '../data/caseStudies';

const featured = caseStudies.slice(0, 3);

const strengths = [
  { title: 'Backend Engineering', desc: 'APIs, services, and data models that scale.', icon: 'backend' },
  { title: 'System Design', desc: 'Distributed systems, boundaries, and clear contracts.', icon: 'system' },
  { title: 'Integrations', desc: 'Third-party systems, webhooks, and unified APIs.', icon: 'integrations' },
  { title: 'Reliability', desc: 'Observability, resilience, and operational clarity.', icon: 'reliability' },
  { title: 'Delivery & Ownership', desc: 'End-to-end ownership from design to production.', icon: 'delivery' },
  { title: 'CI/CD & Environments', desc: 'Pipelines, environments, and release confidence.', icon: 'cicd' },
];

const iconClass = 'size-5 shrink-0 text-neutral-500 dark:text-neutral-400';
---
<Layout title="Bruno Donadío — Senior Backend Engineer" description="Senior Backend Engineer. Platform-minded systems, reliability, integrations, and delivery ownership.">
  <article class="space-y-16 sm:space-y-20">
    <!-- Hero -->
    <section class="pt-2">
      <h1 class="text-4xl font-bold tracking-tight text-neutral-900 dark:text-neutral-100 sm:text-5xl md:text-6xl">
        Senior Backend Engineer
      </h1>
      <p class="mt-6 max-w-2xl text-lg text-neutral-600 dark:text-neutral-400">
        I design and build backend systems and internal platforms that teams rely on — from architecture to production.
      </p>
      <div class="mt-10 flex flex-wrap gap-4">
        <a
          href="/assets/Bruno-Donadio-Resume.pdf"
          download
          class="inline-flex items-center gap-2 rounded-lg bg-neutral-900 px-5 py-2.5 text-sm font-medium text-white transition hover:bg-neutral-700 focus:outline-none focus:ring-2 focus:ring-neutral-500 focus:ring-offset-2 dark:bg-neutral-100 dark:text-neutral-900 dark:hover:bg-neutral-200 dark:focus:ring-neutral-400 dark:focus:ring-offset-neutral-950"
        >
          <svg class="size-4 shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M3 19h18M12 4v11m0 0l-4-4m4 4l4-4" /></svg>
          Download Resume
        </a>
        <a
          href="/case-studies"
          class="inline-flex items-center rounded-lg border border-neutral-300 bg-white px-5 py-2.5 text-sm font-medium text-neutral-700 transition hover:bg-neutral-50 focus:outline-none focus:ring-2 focus:ring-neutral-400 focus:ring-offset-2 dark:border-neutral-700 dark:bg-neutral-900 dark:text-neutral-200 dark:hover:bg-neutral-800 dark:focus:ring-neutral-600 dark:focus:ring-offset-neutral-950"
        >
          View Case Studies
        </a>
      </div>
    </section>

    <!-- About -->
    <section>
      <h2 class="text-2xl font-semibold text-neutral-900 dark:text-neutral-100 sm:text-3xl">About</h2>
      <p class="mt-4 max-w-2xl text-neutral-600 dark:text-neutral-400">
        I focus on backend engineering and platform-minded system design.<br />
        Designing systems other teams build on, keeping them reliable, and shipping with clear ownership.
      </p>
      <ul class="mt-6 list-disc space-y-2 pl-5 text-neutral-600 dark:text-neutral-400">
        <li>Backend services and APIs that scale and stay maintainable</li>
        <li>Platform-minded systems with clear boundaries and contracts</li>
        <li>Reliability: observability, failure modes, and operational runbooks</li>
        <li>Integrations with third-party systems and internal tooling</li>
        <li>End-to-end delivery ownership from design to production</li>
      </ul>
    </section>

    <!-- Core Strengths -->
    <section>
      <h2 class="text-2xl font-semibold text-neutral-900 dark:text-neutral-100 sm:text-3xl">Core Strengths</h2>
      <div class="mt-8 grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
        {strengths.map((s) => (
          <div
            class="rounded-xl border border-neutral-200 bg-white p-6 transition hover:border-neutral-300 dark:border-neutral-800 dark:bg-neutral-900/50 dark:hover:border-neutral-700"
          >
            <div class="flex items-start gap-3">
              {s.icon === 'backend' && (
                <svg class={iconClass} xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M5.25 14.25h13.5m-13.5 0a3 3 0 0 1-3-3m3 3a3 3 0 1 0 0 6h13.5a3 3 0 1 0 0-6m-16.5-3a3 3 0 0 1 3-3h13.5a3 3 0 0 1 3 3m-19.5 0a4.5 4.5 0 0 1 .9-2.7L5.737 5.1a3.375 3.375 0 0 1 2.7-1.35h7.126c1.062 0 2.062.5 2.7 1.35l2.587 3.45a4.5 4.5 0 0 1 .9 2.7m0 0a3 3 0 0 1-3 3m0 3h3.75m-3.75 0a3 3 0 0 1-3-3" />
                </svg>
              )}
              {s.icon === 'system' && (
                <svg class={iconClass} xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3.75 6A2.25 2.25 0 0 1 6 3.75h2.25A2.25 2.25 0 0 1 10.5 6v2.25a2.25 2.25 0 0 1-2.25 2.25H6a2.25 2.25 0 0 1-2.25-2.25V6ZM3.75 15.75A2.25 2.25 0 0 1 6 13.5h2.25a2.25 2.25 0 0 1 2.25 2.25V18a2.25 2.25 0 0 1-2.25 2.25H6A2.25 2.25 0 0 1 3.75 18v-2.25ZM13.5 6a2.25 2.25 0 0 1 2.25-2.25H18A2.25 2.25 0 0 1 20.25 6v2.25A2.25 2.25 0 0 1 18 10.5h-2.25a2.25 2.25 0 0 1-2.25-2.25V6ZM13.5 15.75a2.25 2.25 0 0 1 2.25-2.25H18a2.25 2.25 0 0 1 2.25 2.25V18A2.25 2.25 0 0 1 18 20.25h-2.25A2.25 2.25 0 0 1 13.5 18v-2.25Z" />
                </svg>
              )}
              {s.icon === 'integrations' && (
                <svg class={iconClass} xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.19 8.688a4.5 4.5 0 0 1 1.242 7.244l-4.5 4.5a4.5 4.5 0 0 1-6.364-6.364l1.757-1.757m13.35-.622 1.757-1.757a4.5 4.5 0 0 0-6.364-6.364l-4.5 4.5a4.5 4.5 0 0 0 1.242 7.244" />
                </svg>
              )}
              {s.icon === 'reliability' && (
                <svg class={iconClass} xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
                </svg>
              )}
              {s.icon === 'delivery' && (
                <svg class={iconClass} xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M20.25 7.5l-.625 10.632a2.25 2.25 0 01-2.247 2.118H6.622a2.25 2.25 0 01-2.247-2.118L3.75 7.5M10 11.25h4M3.375 7.5h17.25c.621 0 1.125-.504 1.125-1.125v-1.5c0-.621-.504-1.125-1.125-1.125H3.375c-.621 0-1.125.504-1.125 1.125v1.5c0 .621.504 1.125 1.125 1.125z" />
                </svg>
              )}
              {s.icon === 'cicd' && (
                <svg class={iconClass} xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75V16.5m-13.5-9L12 3m0 0 4.5 4.5M12 3v13.5" />
                </svg>
              )}
              <div class="min-w-0 flex-1">
                <h3 class="font-semibold text-neutral-900 dark:text-neutral-100">{s.title}</h3>
                <p class="mt-2 text-sm text-neutral-600 dark:text-neutral-400">{s.desc}</p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- Featured Case Studies -->
    <section>
      <h2 class="text-2xl font-semibold text-neutral-900 dark:text-neutral-100 sm:text-3xl">Featured Case Studies</h2>
      <p class="mt-2 text-neutral-600 dark:text-neutral-400">
        A selection of projects I’ve led or contributed to.
      </p>
      <div class="mt-8 grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {featured.map((cs) => (
          <CaseStudyCard slug={cs.slug} title={cs.title} subtitle={cs.subtitle} timeframe={cs.timeframe} tags={cs.tags} />
        ))}
      </div>
      <p class="mt-6">
        <a href="/case-studies" class="font-medium text-neutral-700 underline decoration-neutral-400 underline-offset-4 transition hover:decoration-neutral-600 dark:text-neutral-300 dark:decoration-neutral-600 dark:hover:decoration-neutral-400">
          View all case studies →
        </a>
      </p>
    </section>

    <!-- Contact -->
    <section>
      <h2 class="text-2xl font-semibold text-neutral-900 dark:text-neutral-100 sm:text-3xl">Contact</h2>
      <p class="mt-4 max-w-xl text-neutral-600 dark:text-neutral-400">
        If you’d like to discuss backend or platform work, reach out.
      </p>
      <div class="mt-6 flex flex-wrap gap-6">
        <a
          href="mailto:bruno.donadio@icloud.com"
          class="inline-flex items-center gap-2 font-medium text-neutral-700 underline decoration-neutral-400 underline-offset-4 transition hover:decoration-neutral-600 dark:text-neutral-300 dark:decoration-neutral-600 dark:hover:decoration-neutral-400"
        >
          <svg class="size-5 shrink-0 opacity-80" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" aria-hidden="true"><path stroke-linecap="round" stroke-linejoin="round" d="M21.75 6.75v10.5a2.25 2.25 0 0 1-2.25 2.25h-15a2.25 2.25 0 0 1-2.25-2.25V6.75m19.5 0A2.25 2.25 0 0 0 19.5 4.5h-15a2.25 2.25 0 0 0-2.25 2.25m19.5 0v.243a2.25 2.25 0 0 1-1.07 1.916l-7.5 4.615a2.25 2.25 0 0 1-2.36 0L3.32 8.91a2.25 2.25 0 0 1-1.07-1.916V6.75" /></svg>
          bruno.donadio@icloud.com
        </a>
        <a
          href="https://linkedin.com/in/bruno-donadio"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 font-medium text-neutral-700 underline decoration-neutral-400 underline-offset-4 transition hover:decoration-neutral-600 dark:text-neutral-300 dark:decoration-neutral-600 dark:hover:decoration-neutral-400"
        >
          <svg class="size-5 shrink-0 opacity-80" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
          LinkedIn
        </a>
      </div>
    </section>
  </article>
</Layout>
