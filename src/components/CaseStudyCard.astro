---
interface Props {
  slug: string;
  title: string;
  subtitle: string;
  timeframe: string;
  tags: string[];
}

const { slug, title, subtitle, timeframe, tags } = Astro.props;
---
<a
  href={`/case-studies/${slug}`}
  class="group block rounded-xl border border-neutral-200 bg-white p-6 transition hover:border-neutral-300 hover:shadow-md focus:outline-none focus-visible:ring-2 focus-visible:ring-neutral-400 focus-visible:ring-offset-2 dark:border-neutral-800 dark:bg-neutral-900/50 dark:hover:border-neutral-700 dark:hover:shadow-lg dark:hover:bg-neutral-900 dark:focus-visible:ring-neutral-500 dark:focus-visible:ring-offset-neutral-950"
>
  <div class="mb-2 flex flex-wrap items-center gap-2">
    <span class="text-xs font-medium text-neutral-500 dark:text-neutral-400">{timeframe}</span>
    {tags.map((tag) => (
      <span
        class="rounded-full bg-neutral-100 px-2 py-0.5 text-xs text-neutral-600 dark:bg-neutral-800 dark:text-neutral-400"
      >
        {tag}
      </span>
    ))}
  </div>
  <h3 class="text-lg font-semibold text-neutral-900 transition group-hover:text-neutral-600 dark:text-neutral-100 dark:group-hover:text-neutral-300">
    {title}
  </h3>
  <p class="mt-1 text-sm text-neutral-600 dark:text-neutral-400">{subtitle}</p>
</a>
